rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return request.auth.token.admin == true; }

    match /users/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }

    match /mechanics/{uid} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == uid;
      allow update: if isAdmin();
    }

    match /bookings/{bookingId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.mechanicId == request.auth.uid || isAdmin());
      allow update: if isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.mechanicId == request.auth.uid);
    }

    match /emergencyRequests/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
      allow update: if false; // only Cloud Functions should update assignment/status in production
    }

    match /chats/{chatId}/messages/{msgId} {
      allow read, create: if isSignedIn();
    }

    match /adminDisputes/{id} {
      allow read, write: if isAdmin();
    }
  }
}
